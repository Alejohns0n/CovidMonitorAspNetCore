@{
    ViewData["Title"] = "busca cidade";
}
@model CovidMonitorAspNetCore.Models.BuscaCidadeModel
<br />
<br />

<form asp-controller="BuscaCidade" asp-action="Index" method="post">
    <h3>DIGITE SUA CIDADE OU CEP:</h3>
    <div class="row">
        <div class="col">
            <input type="text" class="form-control" placeholder="Cidade" asp-for="NmeCidade"/>
        </div>
        <div class="col">
            <input type="text" class="form-control" placeholder="Cep" asp-for="Cep"/>
        </div>
    </div>
    <div class="row">
        <button type="submit" class="btn btn-primary">BUSCAR</button>
    </div>
</form>

<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="row">CIDADE</th>
            <th>CASOS</th>
            <th>ÓBITOS</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <h6 id="cidade">
                    @ViewData["nmeCidade"]
                </h6>
            </td>
            <td>
                <h6 id="casos">
                    @ViewData["cidadeCasos"]
                </h6>
            </td>
            <td>
                <h6 id="obitos">
                    @ViewData["cidadeObitos"]
                </h6>
            </td>
        </tr>
    </tbody>
</table>

<script type="text/javascript" src="@Url.Content("~/js/BuscaCidade.js")"></script>

<style>
    footer {
        position: absolute;
        bottom: 0;
        width: 100%;
    }
</style>