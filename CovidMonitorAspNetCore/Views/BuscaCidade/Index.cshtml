@{
    ViewData["Title"] = "busca cidade";
}

<div class="input-group input-group-lg">
    <div class="input-group-prepend">
        <span class="input-group-text" id="inputGroup-sizing-lg">Cidade:</span>
    </div>
    <input type="text" class="form-control" id="nmeCidadeInput" aria-describedby="inputGroup-sizing-lg" oninput="MostrarCidade(this.value)" />
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="row">CIDADE</th>
            <th>CASOS ACUMULADOS</th>
            <th>ÓBITOS ACUMULADOS</th>
        </tr>
    </thead>
    <tbody>

        @if (ViewBag.DadosCidades != null)
        {
            foreach (var dadosCidade in ViewBag.DadosCidades)
            {
                string cidadeNome = dadosCidade.nome;
                cidadeNome = cidadeNome.ToLower();
                string cidadeNomePesquisa = ViewData["nomeCidade"].ToString();
                cidadeNomePesquisa = cidadeNomePesquisa.ToLower();
                if (cidadeNome.Contains(cidadeNomePesquisa))
                {
                    <tr>
                        <td>
                            <h6>
                                @cidadeNome
                            </h6>
                        </td>
                        <td>
                            <h6>
                                @dadosCidade.casosAcumulado
                            </h6>
                        </td>
                        <td>
                            <h6>
                                @dadosCidade.obitosAcumulado
                            </h6>
                        </td>
                    </tr>
                }
            }
        }
    </tbody>

</table>

<script type="text/javascript" src="@Url.Content("~/js/BuscaCidade.js")"></script>
