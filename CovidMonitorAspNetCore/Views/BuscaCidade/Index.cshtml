@{
    ViewData["Title"] = "busca cidade";
}
@model CovidMonitorAspNetCore.Models.BuscaCidadeModel
<br />
<br />

<form asp-controller="BuscaCidade" asp-action="Index" method="post">
    <h3>DIGITE SUA CIDADE OU CEP:</h3>
    <div class="row">
        <div class="col">
            <input type="text" class="form-control" placeholder="Cidade" asp-for="NmeCidade" />
        </div>
        <div class="col">
            <input type="text" class="form-control" placeholder="Cep" asp-for="Cep" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <button type="submit" class="btn btn-primary">BUSCAR</button>
        </div>
    </div>
</form>

<br />
@if (ViewData["nmeCidade"] != null)
{
    <div class="card-deck">
        <div class="card">
            <h5 class="card-header" id="card-header">CIDADE</h5>
            <div class="card-body">
                <h6 class="card-text" id="card-text">@ViewData["nmeCidade"]</h6>
            </div>
        </div>
        <div class="card">
            <h5 class="card-header" id="card-header">CASOS</h5>
            <div class="card-body">
                <h6 class="card-text" id="card-text">@ViewData["cidadeCasos"]</h6>
            </div>
        </div>
        <div class="card">
            <h5 class="card-header" id="card-header">ÓBITOS</h5>
            <div class="card-body">
                <h6 class="card-text" id="card-text">@ViewData["cidadeObitos"]</h6>
            </div>
        </div>
    </div>
}

<script type="text/javascript" src="@Url.Content("~/js/BuscaCidade.js")"></script>

<style>
    footer {
        position: absolute;
        bottom: 0;
        width: 100%;
    }

    #card-header, #card-text {
        text-align: center;
    }
</style>